mixin mainMenu(menuItems)


  .main-menu.js-main-menu
    .main-menu__burger-icon.js-main-menu-burger-btn
      span.main-menu__burger-line
      span.main-menu__burger-line
      span.main-menu__burger-line
    nav.main-menu__nav
      ul.main-menu__list
        each item in menuItems
          -
            const { title, subMenu, isActive } = item;
            let itemClass = 'main-menu__item';

            if (subMenu) {
              itemClass += ' main-menu__item_with-sub-menu js-main-menu-item-sub-menu';
            }

            if (isActive) {
              itemClass += ' main-menu__item_active';
            }

          li(class=itemClass)
            a.main-menu__item-link= title
            if subMenu
              ul.main-menu__sub-menu
                each subItem in subMenu
                  li.main-menu__sub-item
                    a.main-menu__item-link= subItem.title

  .sub-menu
    .sub-menu__item О нас
    .sub-menu__item Услуги
      ul.sub-menu__item-li
        li Услуги
        li Услуги
    .sub-menu__item Вакансии
    .sub-menu__item Новости
    .sub-menu__item Соглашения
      ul.sub-menu__item-li
        li Соглашения
        li Соглашения
    .buttons
      .buttons-auth
        +button({ title: 'Войти', path: 'auth.html', variant: 'outlined' })
      .buttons-reg
        +button({ title: 'Зарегистрироваться', path: 'registration.html' })