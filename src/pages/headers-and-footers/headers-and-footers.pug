extends ../../layout/ui-kit.pug
include ../../components/logo-inactive/logo-inactive
include ../../components/header/header
include ../../components/footer/footer

block variables
  -
    const title = 'Toxin heder footer'
    const description = 'description'
    const keywords = 'keywords'
    const pageClass = 'headers-and-footers'
    const faviconRoutes = {
      apple: 'favicons/apple-touch-icon.png',
      big: 'favicons/favicon-32x32.png',
      small: 'favicons/favicon-16x16.png',
      manifest: 'favicons/site.webmanifest',
      pinned: 'favicons/safari-pinned-tab.svg',
    }

  -
    const menuItems = [
      { title: 'О нас', isActive: true },
      {
        title: 'Услуги',
        subMenu: [
          { title: 'Услуги' },
          { title: 'Услуги' },
        ]
      },
      { title: 'Вакансии' },
      { title: 'Новости' },
      {
        title: 'Соглашения',
        subMenu: [
          { title: 'Соглашения' },
          { title: 'Соглашения' }
        ]
      }
    ]

block content
  .headers-and-footers__logo-wrap
    +logoInactive
  .headers-and-footers__wrap
    .headers-and-footers__item
      +header({ customMenuItems: menuItems })
    .headers-and-footers__item.headers-and-footers__item_authorized
      +header({ customMenuItems: menuItems, userName: 'Юлий Цезарь' })
    .headers-and-footers__item
      +footer
 
