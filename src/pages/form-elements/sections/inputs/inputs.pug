include ../../../../components/input/input
include ../../../../components/typography/typography
include ../../../../components/dropdown-input/dropdown-input

mixin inputs
  .inputs
    .inputs__input
      .inputs__title-wrap
        +typography({ text: 'Text Field', variant: 'h3', hasUpper: true })
        p.inputs__title-alt Default
      +input({ type: 'text', name: 'email', placeholder: 'Email' })
    .inputs__input
      .inputs__title-wrap
        +typography({ text: 'Text Field', variant: 'h3', hasUpper: true })
        p.inputs__title-alt Hover / Focus
      +input({
        type: 'text',
        name: 'text',
        placeholder: 'placeholder',
        value: 'This is pretty awesome',
        isFocused: true,
      })
    .inputs__input
      .inputs__title-wrap
        +typography({ text: 'Dropdown', variant: 'h3', hasUpper: true })
      +dropDownInput({ text: 'Сколько гостей' })
    .inputs__input
      .inputs__title-wrap
        +typography({ text: 'Masked text field', variant: 'h3', hasUpper: true })
      +input({
        type: 'text',
        name: 'date',
        classForJs: 'js-masked-input',
        placeholder: 'ДД.ММ.ГГГГ',
      })
    .inputs__date-inputs
      .inputs__date-input
        .inputs__title-wrap
          +typography({ text: 'Date Dropdown', variant: 'h3', hasUpper: true })
        +dropDownInput({ text: 'ДД.ММ.ГГГГ' })
      .inputs__date-input
        .inputs__title-wrap
          +typography({ text: 'Date Dropdown', variant: 'h3', hasUpper: true })
        +dropDownInput({ text: '19.08.2019' })
    .inputs__date-input.inputs__date-input_size_medium.inputs__date-input_with-margin
      .inputs__title-wrap
        +typography({ text: 'Filter date dropdown', variant: 'h3', hasUpper: true })
      +dropDownInput({ text: '19 авг - 23 авг' })
    .inputs__input.inputs__input_size_medium
      .inputs__title-wrap
        +typography({ text: 'Subscription text field', variant: 'h3', hasUpper: true })
      +input({ type: 'text', name: 'date', placeholder: 'Email', withButton: true })